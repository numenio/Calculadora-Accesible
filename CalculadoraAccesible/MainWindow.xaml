<Window x:Class="CalculadoraAccesible.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraAccesible"
        mc:Ignorable="d"
        Title="Calculadora Accesible" Height="450" Width="800" PreviewKeyDown="Window_PreviewKeyDown" Icon="icono-calculadora.jpg">
    <Grid>
        <TextBox x:Name="txtFormula" HorizontalAlignment="Left" Height="76" Margin="93,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="617" FontSize="48" KeyUp="txtFormula_KeyUp"/>
        <TextBlock x:Name="txtResultado" Foreground="Red" HorizontalAlignment="Left" Margin="36,205,0,0" VerticalAlignment="Top" Height="127" Width="709" FontSize="72" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="txtPedido" HorizontalAlignment="Left" Margin="160,33,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="60" Width="463" FontSize="36"/>

        <TextBlock x:Name="txtInfo" HorizontalAlignment="Left" Margin="36,337,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="70" Width="709"/>

    </Grid>
</Window>
